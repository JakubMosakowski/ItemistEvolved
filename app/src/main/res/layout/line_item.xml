<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="listener"
                type="com.jakmos.itemistevolved.presentation.checklists.adapter.ChecklistAdapter.ChecklistAdapterListener"/>

        <variable
                name="model"
                type="com.jakmos.itemistevolved.domain.model.Checklist"/>
    </data>
    <!--TODO make sure it still looks good with more than 1 line-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/removeBtn"
                android:layout_marginEnd="16dp"
                android:labelFor="@+id/lineEditText">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lineEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_item"
                    android:importantForAutofill="no"
                    android:background="@android:color/transparent"
                    android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
                android:id="@+id/removeBtn"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_delete_32dp"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> listener.onEditClicked(model)}"
                android:contentDescription="@string/edit_button"/>

    </RelativeLayout>

</layout>
