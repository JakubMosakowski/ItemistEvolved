<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="viewModel"
                type="com.jakmos.itemistevolved.presentation.checklists.ChecklistsViewModel"/>
    </data>

    <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".presentation.checklists.ChecklistsFragment">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ClickMe"
                android:onClick="@{() -> viewModel.onClicked()}"/>
        <TextView
                android:id="@+id/textView"
                android:text='@{Integer.toString(viewModel.clickedCounter)}'
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
    </LinearLayout>
</layout>
