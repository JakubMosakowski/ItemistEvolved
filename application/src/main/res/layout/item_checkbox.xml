<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <!-- region Binding -->

  <data>

    <variable
      name="subsection"
      type="com.jakmos.itemistevolved.domain.model.Subsection" />

  </data>

  <!-- endregion -->

  <!-- region Root -->

  <com.google.android.material.checkbox.MaterialCheckBox
    android:id="@+id/checkbox"
    style="@style/ItemistEvolved.Widget.TextView.Subsection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_p16"
    android:checked="@{subsection.isChecked}"
    android:layoutDirection="rtl"
    android:padding="@dimen/size_p16"
    android:text="@{subsection.text}"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Subsection" />

  <!-- endregion -->

</layout>
