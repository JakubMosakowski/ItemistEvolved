<resources>

  <eat-comment />

  <!-- region Application -->

  <style name="ItemistEvolved" />

  <!-- endregion -->

  <!-- region Button -->

  <style name="ItemistEvolved.Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:minHeight">@dimen/size_p72</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/font_16</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ItemistEvolved.Widget.Button.Transparent">
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="backgroundTint">@color/whiteTransparent</item>
  </style>

  <!-- endregion -->

  <!-- region Button - High Emphasis -->

  <style name="ItemistEvolved.Widget.Button.ColdPurple" parent="ItemistEvolved.Widget.Button">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/colorPrimary</item>
    <item name="iconTint">@null</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="rippleColor">@color/whiteAlpha30</item>
  </style>

  <!-- endregion -->

  <!-- region Button - Medium Emphasis -->

  <style name="ItemistEvolved.Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:minHeight">@dimen/size_p72</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/font_16</item>
    <item name="android:textStyle">bold</item>
    <item name="rippleColor">@color/blackAlpha10</item>
    <item name="strokeWidth">@dimen/size_p1</item>
  </style>

  <style name="ItemistEvolved.Widget.Button.OutlinedButton.White">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="backgroundTint">@color/white</item>
    <item name="iconTint">@null</item>
  </style>

  <!-- endregion -->

  <!-- region Button - Low Emphasis -->

  <style name="ItemistEvolved.Widget.Button.UnelevatedButton">
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:minHeight">@dimen/size_p48</item>
    <item name="android:textSize">@dimen/font_15</item>
    <item name="backgroundTint">@color/whiteTransparent</item>
  </style>

  <!-- endregion -->

  <!-- region Bottom Sheet -->

  <!-- endregion -->

  <!-- region Checkbox -->

  <style name="ItemistEvolved.Widget.Checkbox" />

  <style name="ItemistEvolved.Widget.Checkbox.FilterCheckbox">
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:button">@null</item>
    <item name="android:layout_marginEnd">@dimen/size_p15</item>
    <item name="android:layout_marginStart">@dimen/size_p15</item>
    <item name="android:textSize">@dimen/font_18</item>
  </style>

  <!-- endregion -->

  <!-- region Chip -->

  <style name="ItemistEvolved.Widget.Chip">
    <item name="chipEndPadding">@dimen/size_p8</item>
    <item name="chipMinHeight">@dimen/size_p44</item>
    <item name="chipStartPadding">@dimen/size_p8</item>
  </style>

  <style name="ItemistEvolved.Widget.ChipSelector">
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/font_14</item>
  </style>

  <!-- endregion -->

  <!-- region Dialog -->

  <style name="ItemistEvolved.Dialog" />

  <!-- endregion -->

  <!-- region EditText -->

  <style name="ItemistEvolved.Widget.EditText.Input" parent="Widget.AppCompat.EditText">
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:background">@color/whiteTransparent</item>
    <item name="android:inputType">text</item>
  </style>

  <style name="ItemistEvolved.Widget.EditText.Search" parent="Widget.AppCompat.EditText" />

  <!-- endregion -->

  <!-- region ImageButton -->

  <style name="ItemistEvolved.Widget.ImageButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:minWidth">?attr/actionBarSize</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
  </style>

  <style name="ItemistEvolved.Widget.ImageButton.Icon">
    <item name="android:foreground">?actionBarItemBackground</item>
  </style>

  <style name="ItemistEvolved.Widget.ImageButton.Clickable">
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <!-- endregion -->

  <!-- region ProgressBar -->

  <style name="ItemistEvolved.Widget.ProgressBar" parent="Widget.AppCompat.ProgressBar">
    <item name="android:minWidth">@dimen/size_p48</item>
    <item name="android:maxWidth">@dimen/size_p48</item>
    <item name="android:minHeight">@dimen/size_p48</item>
    <item name="android:maxHeight">@dimen/size_p48</item>
  </style>

  <!-- endregion -->

  <!-- region ProgressBar - Horizontal -->

  <style name="ItemistEvolved.Widget.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:indeterminate">true</item>
  </style>

  <!-- endregion -->

  <!-- region ProgressBar - Small -->

  <style name="ItemistEvolved.Widget.ProgressBar.Small" parent="Widget.AppCompat.ProgressBar">
    <item name="android:minWidth">@dimen/size_p16</item>
    <item name="android:maxWidth">@dimen/size_p16</item>
    <item name="android:minHeight">@dimen/size_p16</item>
    <item name="android:maxHeight">@dimen/size_p16</item>
  </style>

  <!-- endregion -->

  <!-- region Radio Button -->

  <style name="ItemistEvolved.Widget.RadioButton" />

  <style name="ItemistEvolved.Widget.RadioButton.ItemFormRadioButton" parent="ItemistEvolved.Widget.RadioButton">
    <item name="android:paddingStart">@dimen/size_p15</item>
    <item name="android:paddingEnd">@dimen/size_p15</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/font_15</item>
  </style>

  <!-- endregion -->

  <!-- region RecyclerView -->

  <style name="ItemistEvolved.Widget.RecyclerView" />

  <style name="ItemistEvolved.Widget.RecyclerView.HorizontalList" parent="ItemistEvolved.Widget.RecyclerView">
    <item name="android:clipToPadding">false</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingStart">@dimen/size_p12</item>
    <item name="android:paddingTop">@dimen/size_p2</item>
    <item name="android:paddingEnd">@dimen/size_p12</item>
    <item name="android:paddingBottom">@dimen/size_p8</item>
    <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
  </style>

  <!-- endregion -->

  <!-- region Seek Bar -->

  <style name="ItemistEvolved.Widget.SeekBar" parent="Widget.AppCompat.SeekBar">
    <item name="labelBehavior">gone</item>
  </style>

  <!-- endregion -->

  <!-- region SelectView -->

  <style name="ItemistEvolved.Widget.SelectView" />

  <!-- endregion -->

  <!-- region Snackbar -->

  <style name="ItemistEvolved.Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
    <item name="android:paddingBottom">@dimen/size_p14</item>
    <item name="android:paddingTop">@dimen/size_p14</item>
    <item name="backgroundTint">@color/coldPurple</item>
  </style>

  <style name="ItemistEvolved.Widget.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/font_15</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- endregion -->

  <!-- region TabLayout -->

  <style name="ItemistEvolved.Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
    <item name="tabIndicatorColor">@color/colorAccent</item>
    <item name="tabIndicatorHeight">@dimen/size_p3</item>
    <item name="tabPaddingBottom">@dimen/size_p18</item>
    <item name="tabPaddingTop">@dimen/size_p18</item>
    <item name="tabTextColor">@color/white</item>
    <item name="tabTextAppearance">@style/TextAppearance.ItemistEvolved.TabLayout.Label</item>
  </style>

  <!-- endregion -->

  <!-- region TextAppearance -->

  <style name="TextAppearance.ItemistEvolved.BottomNav.Active" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.ItemistEvolved.BottomNav.Inactive" parent="TextAppearance.AppCompat.Caption" />

  <style name="TextAppearance.ItemistEvolved.TabLayout.Label" parent="TextAppearance.AppCompat">
    <item name="android:textSize">@dimen/font_17</item>
    <item name="android:textStyle">bold</item>
    <item name="lineSpacing">@dimen/font_5</item>
  </style>

  <!-- endregion -->

  <!-- region TextInputEditText -->

  <style name="ItemistEvolved.Widget.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox" />

  <!-- endregion -->

  <!-- region TextInputLayout -->

  <style name="ItemistEvolved.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" />

  <style name="ItemistEvolved.Widget.ErrorTextInputStyle" parent="ItemistEvolved.Widget.TextInputLayout" />

  <!-- endregion -->

  <!-- region TextView -->

  <style name="ItemistEvolved.Widget.TextView" />

  <style name="ItemistEvolved.Widget.TextView.Checklist">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/emperor</item>
    <item name="android:textSize">@dimen/font_24</item>
  </style>

  <style name="ItemistEvolved.Widget.TextView.Subsection" parent="ItemistEvolved.Widget.TextView.Checklist" />

  <!-- endregion -->

  <!-- region Toolbar -->

  <style name="ItemistEvolved.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:theme">@style/ItemistEvolved.ThemeOverlay.Toolbar</item>
    <item name="contentInsetStartWithNavigation">@dimen/size_none</item>
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="titleTextColor">@color/white</item>
    <item name="titleTextAppearance">@style/ItemistEvolved.Widget.Toolbar.Title</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.Back" parent="ItemistEvolved.Widget.Toolbar">
    <item name="navigationIcon">@drawable/ic_arrow_back</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.Close" parent="ItemistEvolved.Widget.Toolbar">
    <item name="navigationIcon">@drawable/ic_close</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.MenuItem" parent="@style/Widget.AppCompat.ActionButton">
    <item name="android:textAllCaps">false</item>
    <item name="textAllCaps">false</item>
  </style>

  <!-- endregion -->

  <!-- region Widget -->

  <style name="ItemistEvolved.Widget" />

  <!-- endregion -->

</resources>
