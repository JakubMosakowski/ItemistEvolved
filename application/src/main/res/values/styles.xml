<resources>

  <eat-comment />

  <!-- region Application -->

  <style name="ItemistEvolved" />

  <!-- endregion -->

  <!-- region Button -->

  <style name="ItemistEvolved.Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:letterSpacing">0</item>
    <item name="android:minHeight">@dimen/size_p72</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/font_17</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- endregion -->

  <!-- region Button - High Emphasis -->

  <style name="ItemistEvolved.Widget.Button.Primary" parent="ItemistEvolved.Widget.Button">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/btn_primary</item>
    <item name="iconTint">@null</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textStyle">bold</item>
    <item name="rippleColor">@color/whiteAlpha30</item>
  </style>

  <!-- endregion -->

  <!-- region Checkbox -->

  <style name="ItemistEvolved.Widget.Checkbox" parent="ItemistEvolved.Widget.ImageButton.Clickable">
    <item name="drawableEndCompat">@drawable/ic_check_circle</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/boulder</item>
    <item name="android:textSize">@dimen/font_17</item>
    <item name="android:textAlignment">textStart</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!-- endregion -->

  <!-- region EditText -->

  <style name="ItemistEvolved.Widget.EditText.Input" parent="Widget.AppCompat.EditText">
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:background">@color/whiteTransparent</item>
    <item name="android:inputType">text</item>
  </style>

  <!-- endregion -->

  <!-- region ImageButton -->

  <style name="ItemistEvolved.Widget.ImageButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:minWidth">?attr/actionBarSize</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
  </style>

  <style name="ItemistEvolved.Widget.ImageButton.Clickable">
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <!-- endregion -->

  <!-- region TextView -->

  <style name="ItemistEvolved.Widget.TextView" />

  <style name="ItemistEvolved.Widget.TextView.Checklist">
    <item name="android:ellipsize">end</item>
    <item name="android:textColor">@color/emperor</item>
    <item name="android:textSize">@dimen/font_24</item>
  </style>

  <style name="ItemistEvolved.Widget.TextView.Subsection" parent="ItemistEvolved.Widget.TextView.Checklist" />

  <!-- endregion -->

  <!-- region Toolbar -->

  <style name="ItemistEvolved.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:theme">@style/ItemistEvolved.ThemeOverlay.Toolbar</item>
    <item name="contentInsetStartWithNavigation">@dimen/size_none</item>
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="titleTextColor">@color/white</item>
    <item name="titleTextAppearance">@style/ItemistEvolved.Widget.Toolbar.Title</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.Back" parent="ItemistEvolved.Widget.Toolbar">
    <item name="navigationIcon">@drawable/ic_arrow_back</item>
  </style>

  <style name="ItemistEvolved.Widget.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!-- endregion -->

  <!-- region Widget -->

  <style name="ItemistEvolved.Widget" />

  <!-- endregion -->

</resources>
